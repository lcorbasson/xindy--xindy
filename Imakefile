XCOMM $Id$
/* ---------------------------------------------------------------------- */

/*
 * Top Imakefile for `xindy' project
 *
 * (history at end)
 */

#include <Project.imk>

ProjectTop()

/*
 * The project now consists of the following modules:
 *
 *     Report		The project report
 *     Presentation     A set of presentation slides
 *     Doc              The whole documentation
 */

#define submodules base locref idxstyle index markup xindy rx

/* ATTN: modules are made in list order! */
BuildProjectModules(Report Presentation Doc\
		    submodules testsuite tools)

CVSAdd(ChangeLog Imakefile)
CVSAdd(Report Presentation)
CVSAdd(Doc)
CVSAdd(noweb src testsuite)
CVSAdd(distrib)
CVSAdd(rx)
CVSAdd(tools)
CVSAdd(submodules)

Distrib : Release force
	@ for subdir in Doc tools;\
          do\
           (echo; echo "changing to $$subdir"; cd $$subdir; make Distrib);\
          done

/* Make the packages */

BINDIR  = ./distrib/binaries
VERSION = 0.9
GTAR    = gtar -czv --dereference -f

#define Package(version,platform)					@@\
Packages:: xindy-version-platform.tar.gz				@@\
xindy-version-platform.tar.gz: force					@@\
	$(GTAR) xindy-version-platform.tar.gz $(BINDIR)/platform

Package($(VERSION),rs6000-aix)
Package($(VERSION),hppa-hpux)
Package($(VERSION),sun4-solaris)

clean::
	$(RM) xindy-$(VERSION)-*.tar.gz

force:


