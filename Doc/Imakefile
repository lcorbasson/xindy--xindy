XCOMM $Id$
/* ---------------------------------------------------------------------- */

/*
 * Imakefile for Documentation of the xindy-Project
 *
 * (history at end)
 */

/* needed modules */
#include <Project.imk>
#include <TeX.imk>


XCOMM ------------------------------------------------------------
XCOMM continue in Imakefile

DISTRIBDIR = ../distrib/Doc
DOCS       = manual.html manual.dvi manual.info manual.txt manual.ps
MOREDOCS   = manual-*.* *.gif manual.sgml

all:: $(DOCS)

Distrib: distrib

distrib: all
	cp $(DOCS) $(MOREDOCS) $(DISTRIBDIR)

manual.tex: manual.sgml
	sgml2latex -2e manual.sgml

TeXTarget(latex,manual)

manual.html: manual.sgml
	sgml2html -img manual.sgml

manual.info: manual.sgml
	sgml2info manual.sgml

manual.txt: manual.sgml
	sgml2txt manual.sgml

manual.ps: manual.dvi
	dvips -o manual.ps manual.dvi

realclean::
	$(RM) manual*.html
	$(RM) manual.tex
	$(RM) manual.dvi
	$(RM) manual.txt
	$(RM) manual.info
	$(RM) manual.ps

CVSAdd(*.sgml)
CVSAdd(*.gif)
CVSAdd(linuxdoc-sgml-a4.sty)
CVSAdd(Imakefile)
CVSAdd(manual.sgml)
CVSCommit()

