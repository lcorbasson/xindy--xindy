XCOMM $Id$
/* ---------------------------------------------------------------------- */

/*
 * Imakefile for Documentation of the xindy-Project
 *
 * (history at end)
 */

/* needed modules */
#include <Project.imk>
#include <TeX.imk>


XCOMM ------------------------------------------------------------
XCOMM continue in Imakefile

DISTRIBDIR = ../distrib/Doc
DOCS       = manual.html manual.dvi manual.info manual.txt manual.ps
MOREDOCS   = manual-*.* *.gif manual.sgml README

all:: $(DOCS)

Distrib: distrib

distrib: all
	cp $(DOCS) $(MOREDOCS) $(DISTRIBDIR)

#define SGMLTarget(file)						@@\
file.tex: file.sgml							@@\
	sgml2latex -2e file.sgml					@@\
TeXTarget(latex,file)							@@\
file.html: file.sgml						       	@@\
	sgml2html -img file.sgml					@@\
file.info: file.sgml							@@\
	sgml2info file.sgml						@@\
file.txt: file.sgml							@@\
	sgml2txt file.sgml						@@\
file.ps: file.dvi							@@\
	dvips -o file.ps file.dvi					@@\
file.ps.2: file.ps							@@\
	psnup -2 file.ps > file.ps.2					@@\
realclean::								@@\
        $(RM) file.info	file.tex file.txt file*.html file.ps file.ps.2

SGMLTarget(manual)
SGMLTarget(tutorial)

CVSAdd(*.sgml)
CVSAdd(*.gif)
CVSAdd(*.1)
CVSAdd(linuxdoc-sgml-a4.sty)
CVSAdd(sgml2info.backend)
CVSAdd(Imakefile)
CVSAdd(tutorial)
CVSCommit()

