XCOMM $Id$
/* ---------------------------------------------------------------------- */

/*
 * Imakefile for Documentation of the xindy-Project
 *
 * (history at end)
 */

/* needed modules */
#include <Project.imk>
#include <TeX.imk>


XCOMM ------------------------------------------------------------
XCOMM continue in Imakefile

DISTRIBDIR = ../distrib/Doc
DOCS       = *.html *.dvi *.info *.txt *.ps
MOREDOCS   = *.gif *.sgml README tutorial

Distrib: distrib

distrib: all
	cp -R $(DOCS) $(MOREDOCS) $(DISTRIBDIR)

#define SGMLTarget(file)						@@\
all:: file.sgml file.html file.dvi file.info file.txt file.ps		@@\
dvi::   file.dvi						       	@@\
file.tex: file.sgml							@@\
	-./sgml2latex -2e file.sgml					@@\
TeXTarget(latex,file)							@@\
html::  file.html						       	@@\
file.html: file.sgml						       	@@\
	-./sgml2html -img file.sgml					@@\
info::  file.info						       	@@\
file.info: file.sgml							@@\
	-./sgml2info file.sgml						@@\
txt::   file.txt						       	@@\
file.txt: file.sgml							@@\
	-./sgml2txt file.sgml						@@\
file.ps: file.dvi							@@\
	dvips -o file.ps file.dvi					@@\
file.ps.2: file.ps							@@\
	psnup -2 file.ps > file.ps.2					@@\
realclean::								@@\
	$(RM) file.info	file.tex file.txt file*.html file.ps file.ps.2  @@\
	$(RM) *.xbm *.pbm

SGMLTarget(manual)
SGMLTarget(tutorial)
SGMLTarget(xindy-by-topic)

CVSAdd(*.sgml)
CVSAdd(*.gif)
CVSAdd(*.fig)
CVSAdd(*.1)
CVSAdd(linuxdoc-sgml-a4.sty)
CVSAdd(sgml2*)
CVSAdd(Imakefile)
CVSAdd(README)
CVSAdd(tutorial)
CVSCommit()

